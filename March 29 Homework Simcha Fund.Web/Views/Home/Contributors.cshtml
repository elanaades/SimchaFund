@using March_29_Homework_Simcha_Fund.Web.Models
@model ContributorViewModel

@if (!String.IsNullOrEmpty(Model.ContributorMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.ContributorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div>
    <h1>Contributors</h1>
</div>
<div class="row" style="margin-top: 20px;">
    <div class="col-md-2">
        <button class="btn btn-danger" id="new-contributor">New Contributor</button>
    </div>
    <div class="col-md-6">
        <input type="text" class="form-control-sm" placeholder="Search By Name" id="search" />
        <button class="btn btn-danger" id="clear">Clear</button>
    </div>
    <div class="col-md-4">
        <h3>Total: @Model.TotalContributions.ToString("C")</h3>
    </div>
</div>
<div class="table-responsive" style="margin-top: 20px;">
    <table class="table table-striped table-bordered">
        <tr>
            <th>Deposit</th>
            <th>Name</th>
            <th>Cell</th>
            <th>Balance</th>
            <th>Always Include</th>
            <th>Actions</th>
        </tr>
        @foreach (var c in Model.Contributors)
        {
            <tr>
                <td>
                    <button class="btn btn-success deposit-button" data-contribid="@c.Id" data-full-name="@c.FirstName @c.LastName">Deposit</button>
                </td>
                <td>@c.FirstName @c.LastName</td>
                <td>@c.CellNumber</td>
                <td>@c.Balance.ToString("C")</td>
                <td style="text-align: center;">
                    <i class="@(c.AlwaysInclude ? "bi bi-check" : "")" style="font-size:30px"></i>
                </td>
                <td>
                    <a href="/contributors/history?contribid=@c.Id" class="btn btn-primary">Show History</a>
                    <button data-first-name="@c.FirstName" data-last-name="@c.LastName"
                        data-cell="@c.CellNumber" data-id="@c.Id" data-always-include="@c.AlwaysInclude" data-date="@c.DateCreated.ToString("yyyy-MM-dd")"
                        class="btn btn-danger edit-contrib">
                        Edit
                    </button>
                </td>
            </tr>
        }

    </table>
</div>


<div class="modal fade new-contrib" id="new-contributor-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Contributor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="POST" action="/contributors/new">
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="form-label">First Name</label>
                            <input class="form-control" id="contributor_first_name" name="firstName" placeholder="First Name" type="text">
                        </div>
                        <div class="form-group col-md-6">
                            <label class="form-label">Last Name</label>
                            <input class="form-control" id="contributor_last_name" name="lastName" placeholder="Last Name" type="text">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="form-group col-md-6">
                            <label class="form-label">Cell Number</label>
                            <input class="form-control" id="contributor_cell_number" name="cellNumber" placeholder="Cell Number" type="text">
                        </div>
                        <div class="form-group col-md-6" id="initialDepositDiv">
                            <label class="form-label">Initial Deposit</label>
                            <input type="text" class="form-control" name="initialDeposit" placeholder="Initial Deposit">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="form-group col-md-6">
                            <label class="form-label">Created Date</label>
                            <input class="form-control" id="contributor_created_at" name="datecreated" placeholder="Date" type="date">
                        </div>
                        <div>
                            <div class="form-check mt-3 ml-3">
                                <input type="checkbox" class="form-check-input" id="contributor_always_include" name="alwaysInclude" value="true">
                                <label class="form-check-label" for="contributor_always_include">Always Include</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button  type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary">Save</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade deposit" id="deposit-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Deposit for <span id="deposit-name"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="POST" action="/contributors/deposit">
                <input type="hidden" name="contributorId"/>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Amount</label>
                        <input class="form-control" name="depositamount" placeholder="Deposit Amount" type="text">
                    </div>
                    <div class="form-group">
                        <label>Date</label>
                        <input type="date" name="depositdate" class="form-control" id="datepicker">
                    </div>
                </div>
                <div class="modal-footer">
                    <button  type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <input disabled class="btn btn-primary" name="commit" type="submit" value="Save">
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->