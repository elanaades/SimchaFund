
@model SimchaViewModel

@if (!String.IsNullOrEmpty(Model.SimchaMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.SimchaMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="header">
    <h1>Simchas</h1>
</div>
<div class="row header">
    <div class="col-md-4">
        <button class="btn btn btn-primary" id="new-simcha" style="margin-top:20px;">New Simcha</button>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered" style="margin-top:20px;">
        <tr>
            <th>Contributions</th>
            <th>Simcha Name</th>
            <th>Contributor Count</th>
            <th>Total</th>
            <th>Date</th>
        </tr>
        @foreach(var simcha in Model.Simchas)
        {
            <tr>
                <td><a class="btn btn-dark" href="/simcha/contributions?simchaid=@simcha.Id">Contributions</a> </td>
                <td>@simcha.SimchaName</td>
                <td>@simcha.ContributorCount/20</td>
                <td>@simcha.TotalContributed.ToString("C")</td>
                <td>@simcha.SimchaDate.ToShortDateString()</td>
            </tr>
        }
    </table>
</div>



<div class="modal fade" id="add-simcha-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Simcha</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/simcha/newsimcha">
                    <div class="form-group">
                        <label class="form-label">Simcha Name:</label>
                        <input class="form-control" name="simchaname" placeholder="Simcha Name" type="text">
                    </div>
                    <div class="form-group mt-3">
                        <label class="form-label">Date of Simcha:</label>
                        <input type="date" name="simchadate" class="form-control" id="datepicker">
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
                        <button class="btn btn-primary" name="commit">Save</button>
                    </div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->